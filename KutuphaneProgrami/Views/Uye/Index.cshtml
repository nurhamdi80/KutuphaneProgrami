@{
    ViewBag.Title = "Üyeler";
}
@using KutuphaneProgrami.Data.Model;
@model List<Uye>

<h2>ÜYELER</h2>

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>T.C No</th>
            <th>Telefon</th>
            <th>Kayıt Tarihi</th>
            <th>Ceza</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uye in Model)
        {
            <tr>
                <td>@uye.Ad</td>
                <td>@uye.Soyad</td>
                <td>@uye.Tc</td>
                <td>@uye.Tel</td>
                <td>@uye.KayitTarihi</td>
                <td>@uye.Ceza</td>                
                <td><a href="@Url.Action("Guncelle","Uye", new { uyeId = uye.Id})" class="btn btn-custom">Güncelle</a></td>
                <td><button class="uyeSil btn btn-danger" value="@uye.Id">Sil</button></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>T.C No</th>
            <th>Telefon</th>
            <th>Kayıt Tarihi</th>
            <th>Ceza</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </tfoot>
</table>

