
@{
    ViewBag.Title = "Verilen Kitaplar";
}
@using KutuphaneProgrami.Data.Model;
@model List<OduncKitap>

<h2 style="display:inline-block">VERİLEN KİTAPLAR</h2>
<a href="@Url.Action("KitapVer","OduncKitap")" class="btn btn-success" style="float:right">Kitap Ver</a>

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Kitap Adı</th>
            <th>Kitap Alan Üye</th>
            <th>Aldığı Tarih</th>
            <th>Getireceği Tarih</th>
            <th>Güncelle</th>
            <th>Getirildi Olarak İşaretle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var oduncKitap in Model)
        {            
            <tr>
                <th>@oduncKitap.Kitap.Ad</th>
                <th>@oduncKitap.Uye.Ad</th>
                <th>@oduncKitap.AlisTarihi.ToString("dddd, dd MMMM yyyy")</th>
                <th>@oduncKitap.GetirecegiTarih.ToString("dddd, dd MMMM yyyy")</th>
                <th><a href="@Url.Action("VerilenKitabiGuncelle","OduncKitap", new { oduncKitapId=oduncKitap.Id})" class="btn btn-danger">Güncelle</a></th>
                <th><button class="getirdiOlarakIsaretle btn btn-success" value="@oduncKitap.Id">Getirdi Olarak İşaretle</button></th>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Kitap Adı</th>
            <th>Kitap Alan Üye</th>
            <th>Aldığı Tarih</th>
            <th>Getireceği Tarih</th>
            <th>Güncelle</th>
            <th>Getirildi Olarak İşaretle</th>
        </tr>
    </tfoot>
</table>


