
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-lg-4 col-sm-3 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Kategori Sayısı</h3>
            <ul class="list-inline two-part">
                <li>
                    <div class="sparklinedash"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-up text-success"></i> <span class="counter text-success">@ViewBag.KategoriSayisi</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-4 col-sm-3 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Yazar Sayısı</h3>
            <ul class="list-inline two-part">
                <li>
                    <div class="sparklinedash2"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-up text-purple"></i> <span class="counter text-purple">@ViewBag.YazarSayisi</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-4 col-sm-3 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Kitap Sayısı</h3>
            <ul class="list-inline two-part">
                <li>
                    <div class="sparklinedash3"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-up text-info"></i> <span class="counter text-info">@ViewBag.KitapSayisi</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-4 col-sm-3 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Teslim Edilen Kitap Sayısı</h3>
            <ul class="list-inline two-part">
                <li>
                    <div class="sparklinedash4"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-down text-danger"></i> <span class="text-danger">@ViewBag.TeslimEdilenKitapSayisi</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-4 col-sm-3 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Teslim Alınan Kitap Sayısı</h3>
            <ul class="list-inline two-part">
                <li>
                    <div class="sparklinedash5"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-down text-danger"></i> <span class="text-danger">@ViewBag.TeslimAlinanKitapSayisi</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-4 col-sm-3 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Son Hafta Teslim Edilen Kitap Sayısı</h3>
            <ul class="list-inline two-part">
                <li>
                    <div class="sparklinedash6"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-down text-danger"></i> <span class="text-danger">@ViewBag.SonHaftaTeslimEdilenKitapSayisi</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-4 col-sm-3 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Son Hafta Teslim Alınan Kitap Sayısı</h3>
            <ul class="list-inline two-part">
                <li>
                    <div class="sparklinedash7"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-down text-danger"></i> <span class="text-danger">@ViewBag.SonHaftaAlinanEdilenKitapSayisi</span></li>
            </ul>
        </div>
    </div>
</div>

@section script{
    <script src="~/Scripts/jquery.charts-sparkline.js"></script>
    
    }